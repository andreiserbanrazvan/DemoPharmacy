@model IEnumerable<DemoApp.Models.Depot>

@{
    ViewData["Title"] = "Index";
}

<h4>Depots</h4>
<hr />

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DepotId)
            </th>
            <th>   
                <a asp-action="AddOrEdit">Create New</a>
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
               @Html.DisplayFor(modelItem => item.DepotId)
            </td>
            <td>
                <a asp-action="AddOrEdit" asp-route-id="@item.DepotId"><i class="fa fa-marker fa-lg"></i></a>
                <a asp-action="Delete" asp-route-id="@item.DepotId" text-danger ml-1" onclick="return confirm('Are you sure you want to delete this record ?')"><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
    }
    </tbody>
</table>
